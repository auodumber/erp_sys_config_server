<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property resource="application.properties"></property>
	
	<springProperty scope="context" name="springAppName"
		source="spring.application.name" />

	<property name="LOGS" value="./logs" />

	<springProfile name="sit">
		<property name="LOGSTASH-DESTINATION"
			value="elk-sit.cdacmumbai.in:5000" />
	</springProfile>

	<springProfile name="qa">
		<property name="LOGSTASH-DESTINATION"
			value="elk-qa.cdacmumbai.in:5000" />
	</springProfile>

	<springProfile name="uat">
		<property name="LOGSTASH-DESTINATION"
			value="elk-uat.ecgcindia.com:5000" />
	</springProfile>

	<springProfile name="prod">
		<property name="LOGSTASH-DESTINATION"
			value="elk-staging.ecgcindia.com:5000" />
	</springProfile>

	<property name="LOG_PATTERN"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [${springAppName},%X{traceId},%X{spanId}] ${PID:- } --- [%15.15t] %-40.40logger{39} : %m%n" />

	<appender name="Console"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				${LOG_PATTERN}
			</Pattern>
		</layout>
	</appender>

	<appender name="RollingFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOGS}/${springAppName}.log</file>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>${LOG_PATTERN}</Pattern>
		</encoder>

		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily and when the file reaches 10 MegaBytes -->
			<fileNamePattern>${LOGS}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>

	<springProfile
		name="sit | qa | uat | prod">
		<appender name="LOGSTASH"
			class="net.logstash.logback.appender.LogstashTcpSocketAppender">
			<destination>${LOGSTASH-DESTINATION}</destination>
			<!-- encoder is required -->
			<encoder class="net.logstash.logback.encoder.LogstashEncoder"></encoder>
		</appender>
	</springProfile>

	<springProfile
		name="local | dev">
		<root level="info">
			<appender-ref ref="RollingFile" />
			<appender-ref ref="Console" />
		</root>
		<logger name="in.ecgc" level="trace" additivity="false">
			<appender-ref ref="RollingFile" />
			<appender-ref ref="Console" />
		</logger>
	</springProfile>

	<springProfile
		name="sit | qa | uat">
		<root level="info">
			<appender-ref ref="LOGSTASH" />
			<appender-ref ref="RollingFile" />
			<appender-ref ref="Console" />
		</root>
		<logger name="in.ecgc" level="TRACE" additivity="false">
			<appender-ref ref="LOGSTASH" />
			<appender-ref ref="RollingFile" />
			<appender-ref ref="Console" />
		</logger>
	</springProfile>

	<springProfile name="prod">
		<root level="info">
			<appender-ref ref="LOGSTASH" />
		</root>
		<logger name="in.ecgc" level="INFO" additivity="false">
			<appender-ref ref="LOGSTASH" />
		</logger>
	</springProfile>

</configuration>